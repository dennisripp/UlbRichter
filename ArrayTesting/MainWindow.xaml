            </StatusBarItem>

        </StatusBar>
        <StatusBar Height="22" Margin="10,10,10,10" VerticalAlignment="Bottom">
            <StatusBarItem HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Stretch">
                <TextBlock x:Name="InfoMessage" TextWrapping="Wrap"/>
            </StatusBarItem>
        </StatusBar>
